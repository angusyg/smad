{
  "name": "smad-server",
  "version": "1.0.0",
  "description": "Mean stack typescript server boilerplate",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dev": "cross-env NODE_ENV=development nodemon",
    "doc": "typedoc --out ./documentation src/bin/www.ts",
    "start": "cross-env NODE_ENV=production node ./build/bin/www.js",
    "test": "npm run test:tu && npm run test:ti && istanbul-combine -d coverage -p summary -r html coverage/**/*.json",
    "test:ti": "cross-env NODE_ENV=test nyc --report-dir coverage/ti --reporter=text --reporter=json mocha -r ts-node/register test/tests.ts --timeout 10000 --exit",
    "test:tu": "cross-env NODE_ENV=test nyc --report-dir coverage/tu --reporter=text --reporter=json mocha -r ts-node/register src/**/*.spec.ts --timeout 10000 --exit"
  },
  "private": true,
  "keywords": [
    "node",
    "express",
    "mean",
    "mongodb",
    "mongoose",
    "passport",
    "jsonwebtoken",
    "typescript"
  ],
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "@types",
      "src/**/*.spec.ts",
      "test/**/*.ts"
    ],
    "temp-directory": "./coverage/.nyc_output"
  },
  "dependencies": {
    "bcrypt": "^3.0.1",
    "body-parser": "^1.18.3",
    "compression": "^1.7.3",
    "cors": "^2.8.4",
    "cross-env": "^5.2.0",
    "csurf": "^1.9.0",
    "dotenv": "^6.1.0",
    "express": "^4.16.4",
    "express-pino-logger": "^4.0.0",
    "express-restify-mongoose": "^5.0.0",
    "helmet": "^3.14.0",
    "jsonwebtoken": "^8.3.0",
    "kind-of": "^6.0.2",
    "mongoose": "^5.3.4",
    "moviedb-promise": "^1.3.1",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "pino": "^5.8.0",
    "pino-caller": "^3.0.0",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/chai": "^4.1.6",
    "@types/compression": "0.0.36",
    "@types/cors": "^2.8.4",
    "@types/dotenv": "^6.1.0",
    "@types/express": "^4.16.0",
    "@types/helmet": "0.0.42",
    "@types/jsonwebtoken": "^7.2.8",
    "@types/mocha": "^5.2.5",
    "@types/mongoose": "^5.2.19",
    "@types/node": "^10.12.0",
    "@types/passport": "^0.4.6",
    "@types/passport-jwt": "^3.0.1",
    "@types/pino-multi-stream": "^3.1.1",
    "@types/proxyquire": "^1.3.28",
    "@types/sinon": "^5.0.5",
    "@types/uuid": "^3.4.4",
    "chai": "^4.2.0",
    "chai-http": "^4.2.0",
    "eslint": "^5.7.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "istanbul": "^0.4.5",
    "istanbul-combine": "^0.3.0",
    "mocha": "^5.2.0",
    "mocha-typescript": "^1.1.17",
    "nodemon": "^1.18.4",
    "nyc": "^13.1.0",
    "sinon": "^7.0.0",
    "source-map-support": "^0.5.9",
    "supertest": "^3.3.0",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.6.0",
    "typedoc": "^0.13.0",
    "typescript": "^3.1.3"
  }
}
